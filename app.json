{
  "expo": {
    "name": "Client Prestations",
    "slug": "client-prestations",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "experiments": {
      "tsconfigPaths": true
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.clientprestations",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Cette application a besoin d'accéder à votre position pour vous mettre en relation avec des prestataires à proximité.",
        "NSLocationAlwaysUsageDescription": "Cette application a besoin d'accéder à votre position pour vous mettre en relation avec des prestataires à proximité, même en arrière-plan.",
        "NSCameraUsageDescription": "Cette application a besoin d'accéder à votre caméra pour ajouter des photos à vos demandes et numériser des documents."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.clientprestations",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBKXXVm5gMMQrWWlbT-Hob76QrYAw_PRrQ"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Autoriser $(PRODUCT_NAME) à utiliser votre emplacement."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Autoriser $(PRODUCT_NAME) à accéder à votre caméra."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Autoriser $(PRODUCT_NAME) à accéder à vos photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}